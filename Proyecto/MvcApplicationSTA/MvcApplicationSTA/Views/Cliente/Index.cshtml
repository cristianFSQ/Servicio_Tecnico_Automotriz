@model IEnumerable<MvcApplicationSTA.Models.cliente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/PaginaMaestra/_LayoutPaginaMaestra.cshtml";
}

@section region_principal{

    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <div class="container table-responsive margen_listado">
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CliNom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CliApe)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CliTel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CliEma)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CliCla)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CliClv)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CliSeg)
                </th>
           
                <th>Acciones</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CliNom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CliApe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CliTel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CliEma)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CliCla)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CliClv)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CliSeg)
                    </td>
           
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CliRut }) |
                        @Html.ActionLink("Details", "Details", new { id = item.CliRut }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CliRut })
                    </td>
                </tr>
            }

        </table>
        </div>
}

