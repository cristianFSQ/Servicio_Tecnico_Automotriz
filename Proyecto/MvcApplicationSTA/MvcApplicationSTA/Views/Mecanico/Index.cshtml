@model IEnumerable<MvcApplicationSTA.Models.mecanico>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/PaginaMaestra/_LayoutPaginaMaestra.cshtml";
}

@section region_baner{
}

@section region_principal{
 

    <h2>Listado Mecanico</h2>

    <p>
        @Html.ActionLink("Crear Nuevo Mecanico", "Create")
    </p>
    <div class="container table-responsive margen_listado">
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MecRut)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MecCla)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MecClv)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MecNom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MecApe)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MecFon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MecCor)
                </th>
                <th>Acciones</th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MecRut)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MecCla)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MecClv)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MecNom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MecApe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MecFon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MecCor)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MecID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.MecID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MecID })
                    </td>
                </tr>
            }

        </table>
    </div>

}

